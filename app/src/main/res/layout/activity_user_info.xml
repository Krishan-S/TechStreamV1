<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".UserInfoEditActivity">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentStart="true" />

    <!-- Profile Picture Frame -->
    <FrameLayout
        android:id="@+id/profileFrame"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/backArrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_border">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user_avatar"
            android:scaleType="centerCrop"
            android:contentDescription="User Image"
            android:clipToOutline="true" />
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/profile_inner_circle" />
    </FrameLayout>

    <!-- Info Card -->
    <LinearLayout
        android:id="@+id/infoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileFrame"
        android:orientation="vertical"
        android:background="@drawable/rounded_card"
        android:padding="16dp">

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:enabled="false"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:enabled="false"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Action Buttons (Edit, Sign Out) -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoCard"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign Out"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Profile"
            android:textColor="#7F1416"
            android:background="@drawable/rounded_button_outline" />
    </LinearLayout>

    <!-- Save / Cancel Buttons -->
    <LinearLayout
        android:id="@+id/editButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoCard"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#7F1416"
            android:background="@drawable/rounded_button_outline"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button" />
    </LinearLayout>

    <!-- Edit Info Dialog Overlay -->
    <FrameLayout
        android:id="@+id/dialogOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4A6B6B"
                android:padding="24dp">

                <!-- Dialog Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Info"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <!-- Dialog User Name Input -->
                <EditText
                    android:id="@+id/dialogUsername"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/dialog_edittext_background"
                    android:hint="User name"
                    android:textColorHint="#999999"
                    android:textColor="@android:color/black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="text"
                    android:maxLines="1" />

                <!-- Dialog Email Input -->
                <EditText
                    android:id="@+id/dialogEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/dialog_edittext_background"
                    android:hint="Email"
                    android:textColorHint="#999999"
                    android:textColor="@android:color/black"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />

                <!-- Dialog Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnDialogCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="16dp"
                        android:text="Cancel"
                        android:textColor="@android:color/white"
                        android:background="?android:attr/selectableItemBackground"
                        android:textAllCaps="false"
                        android:minWidth="80dp" />

                    <Button
                        android:id="@+id/btnDialogUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Update"
                        android:textColor="@android:color/white"
                        android:background="?android:attr/selectableItemBackground"
                        android:textAllCaps="false"
                        android:minWidth="80dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</RelativeLayout>
